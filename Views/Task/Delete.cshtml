@model SimpleTaskApp.Models.TaskItem

@{
    ViewData["Title"] = "Удалить задачу";
}

<h2>Удалить задачу</h2>

<h3>Вы уверены, что хотите удалить эту задачу?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Описание:</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Статус:</dt>
        <dd class="col-sm-10">@(Model.IsCompleted ? "Выполнено" : "В процессе")</dd>
        <dt class="col-sm-2">Дата создания:</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>